<div class= "main_body_container">
  <div class = "left_sidebar">
    <h4 class="left_header"><%=link_to "Your Events", user_path(session[:user_id])%></h4>
    <% @user.events.each do |event| %>
      <div class="left_event_container">
        <div class="left_title"><%= link_to event.title, event_path(event)%></div>
        <div class="left_date"><%= event.event_time.strftime("%m/%e at %l:%M%p")%></div>
        <%= link_to(image_tag(event.event_image_url, class: "left_event_image"), event_path(event)) %>
      </div>
    <% end %>
  </div>
  <div class = "main_layout">
    <h4 class="main_header">Upcoming Events</h4>
    <% @events.each do |event| %>
    <div class="event_container">
      <h2 class="event_title"><%= link_to event.title, event_path(event)%></h2>
      <h4 class="event_content"><%= event.event_content %></h4>
      <h4 class="event_time"><%= event.event_time.strftime("%b %e, %Y at %l:%M %p") %></h4>
      <%= link_to(image_tag(event.event_image_url, class: "event_image"), event_path(event)) %>
    </div>
    <% end %>
  </div>
  <%= render "shared/user_right_sidebar" %>
</div>
